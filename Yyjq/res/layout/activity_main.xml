<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yjjq_xcy.MainActivity" >

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#FFC4C4CC"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_exchange"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />
		
		<TextView
            android:id="@+id/txt_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_task"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/txt_publish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_publish"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_message"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_profile"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#FFC4C4CC"
        android:layout_above="@id/ly_tab_bar"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_tab_bar"
        android:id="@+id/ly_content">   
		
        
        <RelativeLayout 
		    android:id="@+id/fg_exchange"
		    android:visibility="gone"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#000000"
		    android:orientation="vertical">
		    
		    <Button 
		        android:id="@+id/testButton"
		        android:text="@string/app_name"
		        android:layout_width="60dp"
		        android:layout_height="50dp"
		        />
		    
		    <edu.whu.cs.lyxxcy.lib.MultiColumnListView
		        xmlns:pla="http://schemas.android.com/apk/res-auto"
		        android:background="#000000"
		        android:id="@+id/list1"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" 
		        pla:plaColumnNumber="3"
		        pla:plaLandscapeColumnNumber="3"
		        android:layout_below="@id/testButton"
		        >
		    </edu.whu.cs.lyxxcy.lib.MultiColumnListView> 
		 
		</RelativeLayout> 
		
        <LinearLayout 
		    android:orientation="vertical" 
		    android:layout_width="match_parent" 
		    android:layout_height="match_parent" 
		    android:visibility="gone"
		    android:id="@+id/fg_message"> 
		    
		    <TextView  
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent" 
		        android:gravity="top" 
		        android:text = "@string/tag_message"
		        android:textColor="#000000" 
		        android:textSize="20sp"/> 
		</LinearLayout>
		
        <LinearLayout 
		    android:orientation="vertical" 
		    android:layout_width="match_parent" 
		    android:layout_height="match_parent" 
		    android:visibility="gone"
		    android:id="@+id/fg_task"> 
		    
		    <TextView  
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent" 
		        android:gravity="top" 
		        android:text = "@string/tag_task"
		        android:textColor="#000000" 
		        android:textSize="20sp"/> 
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="vertical" 
		    android:layout_width="match_parent" 
		    android:layout_height="match_parent" 
		    android:visibility="gone"
		    android:id="@+id/fg_publish"> 
		    
		    <TextView  
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent" 
		        android:gravity="top" 
		        android:text = "@string/tag_publish"
		        android:textColor="#000000" 
		        android:textSize="20sp"/> 
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="vertical" 
		    android:layout_width="match_parent" 
		    android:layout_height="match_parent" 
		    android:visibility="gone"
		    android:id="@+id/fg_profile"> 
		    
		    <TextView  
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent" 
		        android:gravity="top" 
		        android:text = "@string/tag_profile"
		        android:textColor="#000000" 
		        android:textSize="20sp"/> 
		</LinearLayout>
    </FrameLayout>

</RelativeLayout>
